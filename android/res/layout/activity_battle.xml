<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".BattleActivity">

    <ImageView
        android:id="@+id/enemy2"
        android:layout_width="208dp"
        android:layout_height="218dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="205dp"
        android:layout_height="145dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/woodblock"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/attackButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/examineButton"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:background="@drawable/woodbutton"
        android:onClick="examineTurn"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/runButton"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:background="@drawable/woodbutton"
        android:onClick="runAwayTurn"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/attackButton"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:background="@drawable/woodbutton"
        android:onClick="attackTurn"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/examineButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/magicButton"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:background="@drawable/woodbutton"
        android:onClick="magicTurn"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/runButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an Option"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/attackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="205dp"
        android:layout_height="145dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/woodblock"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/magicButton"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>